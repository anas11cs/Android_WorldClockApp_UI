<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">
<LinearLayout
    android:id="@+id/layoutHeader"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/colorTextIcons"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/AvailableCountries"
        android:textColor="@color/colorTextIcons"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="65dp" />
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_search"
        app:tint="@color/colorTextIcons"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_poweroff"
        app:tint="@color/colorTextIcons"/>
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/availableCountriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/buttonAddToSelectedCountries"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"/>
    <Button
        android:id="@+id/buttonAddToSelectedCountries"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/colorAccent"
        android:text="@string/add_country"
        android:textAllCaps="false"
        android:textColor="@color/colorTextIcons"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>